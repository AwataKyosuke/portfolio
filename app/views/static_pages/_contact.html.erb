<h2>- クエストを依頼する -</h2>
<div class='box'>
  <h4 class='title'>- フォーム -</h4>
  <%= form_with url: 'https://formspree.io/kyou0209@gmail.com', local: true do |form| %>
  <div class="form-row mb-2 pt-2">
    <div class='col'>
      <%= form.text_field :name, class: 'form-control', placeholder: '名前', required: true %>
    </div>
    <div class="col">
      <%= form.text_field :email, class: 'form-control', placeholder: 'メールアドレス', required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= form.text_area :message, class: 'form-control', placeholder: 'メッセージ', required: true %>
  </div>
  <div class="form-group">
    <%= form.submit('送信', class: 'form-control') %>
  </div>
  <% end %>
</div>
